extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='roll') Roll:
      input#emp.form-control(type='number' name='roll' required='true' value=(undefined===student ? '' : student.roll))
      label(for='query') Complain:
      input#hash.form-control(type='text' name='query' required='true' value=(undefined===complaint ? '' : complaint.query))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg