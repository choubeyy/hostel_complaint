extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='emp') ID:
      input#emp.form-control(type='text' name='emp' required='true' value=(undefined===staff ? '' : staff.emp))
      label(for='hash') Password:
      input#hash.form-control(type='text' name='hash' required='true' value=(undefined===staff ? '' : staff.hash))
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg